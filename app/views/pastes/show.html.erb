<% content_for :title, "Show paste" %>

<p style="text-align: right; margin-top: -20px"><%= link_to "Download raw file", download_paste_path(paste), :class => "download" %></p>

<div class="code-container">
  <%= raw(paste.highlighted) %>
  <div class="line-numbers"></div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    var num = $('.highlight').html().split("\n").length;
    for (i = 1; i < num; i++) {
      $('.line-numbers').append(i+"<br />");
    }
  })
</script>