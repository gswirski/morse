<% content_for :title, "Login" %>

<%= form_for(:user, url: { controller: 'sessions', action: 'create' } ) do |f| %>
  <div class="clearfix">
    <%= f.label :username %>
    <div class="input">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Login", :class => "btn btn-primary" %>
    <%= link_to "Create account", new_user_path %>
  </div>
<% end %>
