<% content_for :title, "Users" %>

<div class="row">
  <div class="span3">
    <ul class="pastes nav nav-pills nav-stacked">
      <% @users.each do |user| %>
      <li>
        <%= link_to user_pastes_path(user) do %>
          <span class="label pull-right"><%= user.pastes_count %></span>
          <i class="icon-user"></i> <%= user.username %>
        <% end %>
      </li>
      <% end %>
    </ul>
</div>
</div>

<%= paginate(@users, :theme => 'twitter-bootstrap') %>